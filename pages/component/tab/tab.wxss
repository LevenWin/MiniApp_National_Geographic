.tab {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index:500;
  background-color: white;
  box-sizing: border-box;
}

.line {
  width: 100%;
  height: 1rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color:#666; 
}

.tab-item {
  height: 100%;
  width: 25%;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  line-height: 100rpx;
  align-items: center;

}
.tab-item text {
  display: block;
  text-align: center;
  font-size: 16px;
  color: #333;
  width: 80%;
  box-sizing: border-box;
}

.tab-item-hover {
  background: rgb(241, 240, 240);
}

.tab-item-selected text {
  border-bottom: 2px solid #666;
}
