.commment-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #FFF;
  border-top: 1px solid #ddd;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 0 30rpx;
  align-items: center;
}
.input-container {
  flex-grow:1;
  align-items: center;
  display: flex;
  justify-content: center;
  font-size: 14px;
  height: 70rpx;
  border-radius: 70rpx;
  border: 1px solid #ddd;
  box-sizing: border-box;
}
.right-icons {
  height: 100%;
  align-items: center;
  display: flex;
  justify-content: center;
}
.right-icons text {
  display: inline-block;
  text-align: center;
  font-size: 14px;
  color: #999;
  padding: 0 20rpx;
}