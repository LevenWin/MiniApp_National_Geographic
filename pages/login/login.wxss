/* pages/login/login.wxss */

.container {
  height: 100%;
  background-color: white;
}

.tab {
  height: 100%;
  display: flex;
  font-size: 16px;
  color: #333;
  width: 100%;
  justify-content: space-between;
  
}

.tab-item {
  flex: 1;
  height: 100rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: content-box;
}

.selected {
  color: orange;
  border-bottom: 2px solid orange;
}

.normal-login-content {

}


.code-login-content {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 50rpx;
  justify-content: center;
}

.input-container {
  font-size: 16px;
  height: 80rpx;
  border-radius: 80rpx;
  border: 1px solid #eee;
  box-sizing: border-box;
  align-items: center;
  display: flex;
  justify-content: center;
  margin: 10rpx 30rpx;
}

input {
  margin: 0 30rpx;
  text-align: center;
}

.left-right-button {
  margin: 10rpx 50rpx;
  height: 30px;
  display: flex;
  justify-content: space-between;
  color: #333;
  font-size: 14px;
  align-items: center;
}
.submit {
  background-color: orange;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 17px;
  height: 80rpx;
  margin: 150rpx 30rpx 30rpx 30rpx;
  border-radius: 80rpx;
  display: flex;
}
.hover {
  background-color: #eee;
}
.third-login {
  height: 100%;
  color: #999;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.third-login text {
  display: block;
  text-align: center;
}
