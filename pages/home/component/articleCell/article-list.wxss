/* pages/home/component/articleCell/article-list.wxss */

.container {
  width: 100%;
  height: 100%;
  background: white;
}

.swiper-container {
  width: 100%;
  height: 400rpx;
  position: relative;
}

.swiper {
  position: relative;
  width: 100%;
  height: 100%;
}

.swiper .image{
  width: 100%;
  height: 100%;
  background: #EEE;
}

.swiper image{
  width: 100%;
  height: 100%;
}

.banner-info {
  position: absolute;
  left: o;
  bottom: 0;
  width: 100%;
  height: 30px;
  background: #000;
  opacity: 0.5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.banner-info-text , .banner-info-index {
  color: white;
  font-size: 12px;
  padding: 0 30rpx;
}
.article-list {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap:wrap;
}

.cell {
  position: relative;
  width: 100%;
}

.image-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
}

.image-box {
  width: 50%;
  height: 250rpx;
  margin-bottom: 10rpx;
  overflow: hidden; 

}

.left-image,.right-image {
  background-color: #DDD
}
.left-image {
  margin-right: 10rpx;

}

.right-image {
  margin-left: 10rpx;
}

.load-more {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color: #999;
}



