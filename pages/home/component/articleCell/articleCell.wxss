/* pages/home/component/articleCell/articleCell.wxss */

.container {
  height: 100%;
  background: white;
  overflow: hidden;
}

.top-bottom {
  padding-top: 10rpx;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.top {
  height: 75%;
  width: 100%;
  overflow: hidden;
}
.top image {
  display: block;
  width: 100%;
}

.bottom {
  height: 25%;
  width: 100%;
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

 .title {
  font-size: 16px;
  color: #333;
}
 .pub-day {
  font-size: 12px;
  color: #666;
}

.bottom .title, .bottom .pub-day {
  height: 50rpx;
   text-align: center;
}

.left-right {
  height: 100%;
  display: flex;
  flex-direction:row-reverse;
  width: 100%;
}

.left {
  position: absolute;
  top: 0px;
  left: 0px;
  bottom: 0px;
  width: 55%;
  padding: 10rpx 0;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}

.left text {
  display: block;
  padding-left: 30rpx;
  padding-right: 20rpx;
}

.right {
  width: 45%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}
.right image {
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #eee;
}

.line {
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 1rpx;
  background: rgb(155, 154, 154);
}

.hidden {
  display: none;
}

.hover {
  background: rgb(241, 240, 240);
}
